# Example environment variables (DO NOT COMMIT SECRETS)
# Frontend (public)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_USE_MOCK_CHAT=1 # set to 0 for supabase mode
NEXT_PUBLIC_SENTRY_DSN=

# Server / Admin secrets (store these securely in Vercel/GitHub secrets)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgres://postgres:password@db.host:5432/postgres
SENTRY_DSN=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Other (for CI/CD)
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-vercel-org-id
VERCEL_PROJECT_ID=your-vercel-project-id

# WebRTC (Metered.live TURN Server)
NEXT_PUBLIC_METERED_DOMAIN=your-metered-domain
NEXT_PUBLIC_METERED_SECRET_KEY=your-metered-secret-key
NEXT_PUBLIC_METERED_API_KEY=your-metered-api-key

NEXT_PUBLIC_METERED_TURN_USERNAME=your-turn-username
NEXT_PUBLIC_METERED_TURN_CREDENTIAL=your-turn-credential
